{{#if editQuestionForm}}
  <div class="edit-question">
    <form>
      <div class="form-group">
        <label for="content">Question:</label>
        {{input class="form-control" id="content" value=question.content}}
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input class="form-control" id="author" value=question.author}}
      </div>
      <div class="form-group">
        <label for="body">Additional Notes:</label>
        {{input class="form-control" id="notes" value=question.notes}}
      </div>
      <button type="button" class="btn btn-primary" {{action 'updateQuestion'}}>Update Question</button>
      <button type="button" class="btn btn-warning" {{action 'editQuestionFormHide'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-primary" {{action 'editQuestionFormShow'}}>Edit Question</button>
{{/if}}
