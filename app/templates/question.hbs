<div class="body-col">
  <div class="row">
    <h1>{{model.content}}</h1>
    <h3>{{model.author}}</h3>
    <p><strong>{{model.date}}</strong></p>
    <p>{{model.notes}}</p>
    <hr>

  </div>
  <div class="row">
    {{edit-question question=model updateQuestion="updateQuestion" deleteQuestion="deleteQuestion"}}

  </div>
  <hr>
  {{new-answer question=model newAnswerSubmit="newAnswerSubmit"}}

  {{#each model.answers as |answer|}}
    {{answer-tile answer=answer upvote="upvote" downvote="downvote"}}
  {{/each}}
</div>
