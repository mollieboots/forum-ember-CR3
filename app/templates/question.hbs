<div class="body-col">
  <h1>{{model.content}}</h1>
  <h3>{{model.author}}</h3>
  <p><strong>{{model.date}}</strong></p>
  <p>{{model.notes}}</p>
  <hr>
  {{edit-question question=model updateQuestion="updateQuestion"}}
  <button type="button" class="btn btn-danger" {{action 'deleteQuestion'}}>Delete</button>
  <hr>
  {{new-answer question=model newAnswerSubmit="newAnswerSubmit"}}

  {{#each (sort-answers model.answers model.test) as |answer|}}
    {{answer-tile answer=answer upvote="upvote" downvote="downvote"}}
  {{/each}}
</div>
